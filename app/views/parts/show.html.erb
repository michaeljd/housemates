<%- model_class = Part -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @part.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @part.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_id) %>:</strong></dt>
  <dd><%= @part.bill_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:housemate_id) %>:</strong></dt>
  <dd><%= @part.housemate_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              parts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_part_path(@part), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              part_path(@part),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
