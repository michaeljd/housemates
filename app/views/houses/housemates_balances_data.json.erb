{
  "type": "ColumnChart",
  "table": { "cols": [ { "label": "Housemate", "type": "string" },
                       { "label": "Balance", "type": "number" } ],
             "rows": [ <% @house.housemates.each do |housemate| %>
                       { "c": [ { "v": "<%= housemate.name %>" }, { "v": <%= housemate.balance %>, "f": "<%= number_to_currency housemate.balance %>" } ] }
                       <%= ',' if housemate != @house.housemates.last %>
            <% end %>]
  },
  "options": { "legend": "none" }
}
