<%- model_class = Housemate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @housemate.name %></dd>
  <dt><strong>Balance:</strong></dt>
  <dd><%= number_to_currency @housemate.balance %></dd>
</dl>

<%= chart_tag(house_housemate_balance_data_path(@house,@housemate, :format => :json), 300) if @house.housemates.any? %>

<table>
  <thead>
  <th>
  </th>
  <thead>
  <tbody>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              house_housemates_path(@house), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_house_housemate_path(@house,@housemate), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              house_housemate_path(@house,@housemate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
