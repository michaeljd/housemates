<%- model_class = Bill -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @bill.name || "None" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @bill.description || "None" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= number_to_currency @bill.amount || 0 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:due) %>:</strong></dt>
  <dd><%= @bill.due || "Not specified" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paid) %>:</strong></dt>
  <dd><%= @bill.paid? && @bill.paid || "No" %></dd>
</dl>

<dl class="dl-horizontal">
<% @bill.parts.each do |part| %>
  <dt><strong><%= part.housemate.name %>:</strong></dt>
  <dd><%= number_to_currency part.amount %></dd>
<% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              house_bills_path(@house), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_house_bill_path(@house,@bill), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              house_bill_path(@house,@bill),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
